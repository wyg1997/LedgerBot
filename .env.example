# 飞书应用配置
FEISHU_APP_ID=your_app_id
FEISHU_APP_SECRET=your_app_secret
FEISHU_BOT_NAME=记账管家

# 飞书多维表格URL（支持 base 或 wiki 链接格式）
# Base格式: https://example.feishu.cn/base/APP_TOKEN?table=TABLE_ID
# Wiki格式: https://example.feishu.cn/wiki/NODE_TOKEN?table=TABLE_ID&view=...
FEISHU_BITABLE_URL=https://example.feishu.cn/base/YOUR_APP_TOKEN?table=YOUR_TABLE_TOKEN

# AI配置
AI_API_KEY=your_openai_api_key
AI_BASE_URL=https://api.openai.com
AI_MODEL=gpt-3.5-turbo

# 服务器配置
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30

# 数据存储配置
DATA_DIR=./data
LOG_LEVEL=info

# 多维表格字段名配置（可选，使用默认值时可省略）
FEISHU_FIELD_CATEGORY=收支类型
FEISHU_FIELD_DESCRIPTION=描述
FEISHU_FIELD_AMOUNT=金额
FEISHU_FIELD_TYPE=分类
FEISHU_FIELD_DATE=日期
FEISHU_FIELD_USER_NAME=记录者
FEISHU_FIELD_ORIGINAL_MSG=原始消息

# 缓存配置（可选）
CACHE_TTL=3600
CACHE_CLEANUP=300
